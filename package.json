{
  "name": "osrs-mcp",
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "docker:build": "docker build -t osrs-mcp:latest .",
    "docker:run": "docker run -it --rm osrs-mcp:latest",
    "docker:shell": "docker run -it --rm osrs-mcp:latest sh",
    "inspector:local": "npx @modelcontextprotocol/inspector@latest https://localhost:3000",
    "inspector:heroku": "npx @modelcontextprotocol/inspector@latest https://osrs-mcp.nuggylib.com",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc --outDir build",
    "test:deployment": "./utils/test-deployment.sh \"$@\"",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0"
  }
}
